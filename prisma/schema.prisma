generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  TEACHER
}

enum CloseMode {
  STRICT
  PERMISSIVE
}

enum AttemptStatus {
  STARTED
  COMPLETED
}

model User {
  id            String    @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String    @unique
  password      String
  role          Role      @default(STUDENT)
  studentCode   String?   @unique // For students
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  examsCreated  Exam[]    @relation("CreatedExams")
  attempts      Attempt[]
  assignedCodes LateCode[]
}

model Exam {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  startTime   DateTime
  endTime     DateTime
  duration    Int       // in minutes
  closeMode   CloseMode @default(STRICT)
  
  createdById String    @db.ObjectId
  createdBy   User      @relation("CreatedExams", fields: [createdById], references: [id])

  questions   Question[]
  attempts    Attempt[]
  lateCodes   LateCode[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Question {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  examId      String    @db.ObjectId
  exam        Exam      @relation(fields: [examId], references: [id], onDelete: Cascade)
  text        String
  imageUrl    String?   // URL of the image for the question
  points      Int       @default(1)
  
  options     Option[]
  responses   Response[]
}

model Option {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  questionId  String    @db.ObjectId
  question    Question  @relation(fields: [questionId], references: [id], onDelete: Cascade)
  text        String
  isCorrect   Boolean   @default(false)
  
  responses   Response[]
}

model Attempt {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  examId      String        @db.ObjectId
  exam        Exam          @relation(fields: [examId], references: [id])
  userId      String        @db.ObjectId
  user        User          @relation(fields: [userId], references: [id])
  
  startedAt   DateTime      @default(now())
  expiresAt   DateTime
  submittedAt DateTime?
  status      AttemptStatus @default(STARTED)
  score       Int?
  resumeToken String        @unique // For resuming on another device

  responses   Response[]
}

model Response {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  attemptId        String   @db.ObjectId
  attempt          Attempt  @relation(fields: [attemptId], references: [id], onDelete: Cascade)
  questionId       String   @db.ObjectId
  question         Question @relation(fields: [questionId], references: [id])
  selectedOptionId String   @db.ObjectId
  selectedOption   Option   @relation(fields: [selectedOptionId], references: [id])
  isCorrect        Boolean
}

model LateCode {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  code            String    @unique
  examId          String    @db.ObjectId
  exam            Exam      @relation(fields: [examId], references: [id], onDelete: Cascade)
  usagesRemaining Int       @default(1)
  expiresAt       DateTime?
  
  assignedUserId  String?   @db.ObjectId
  assignedUser    User?     @relation(fields: [assignedUserId], references: [id])
}
